lang go

declare """
var MAX int = 5
"""

net "my net" : 
    place p1 int = 0, 1, 2
    place p2 int = 1, 2, 3
    place p3 int = ${MAX}
    place p4 int
    trans t1 x != y :
        var  p1 > x
        var  p2 > y
        val  p3 > MAX
        val  p3 < MAX
        expr p4 < y + x + MAX
    trans t2 z < 2*MAX :
        var  p4 > z
        expr p1 < z - MAX
        expr p2 < z - MAX + 1
